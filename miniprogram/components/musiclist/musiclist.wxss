.musiclist-container {
  display: flex;
  padding: 14rpx 20rpx;
  align-items: center;
}

.selected view{
  color: #d43c33
}

.musiclist-index {
  color: #888;
  font-size: 34rpx;
  width: 60rpx;
  margin-left: 20rpx;
}

.musiclist-info {
  flex-grow: 1;
  width: 0;
}

.musiclist-name {
  font-size: 34rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
}

.musiclist-alia {
  color: #888;
}

.musiclist-singer {
  color: #888;
  font-size: 24rpx;
  margin-top: 10rpx;
}