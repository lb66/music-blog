page{
  background-color: #f1f1f1;
}
.blog{
  padding: 20rpx;
  background-color: #fff;
}
.blog-title{
  display: flex;
}
.blog-portrait{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.blog-box{
  margin-left: 20rpx;
}
.blog-time{
  margin-top: 6rpx;
  font-size: 24rpx;
  color: grey;
}
.blog-content{
  margin-top: 10rpx ;
  width: 710rpx;
  word-wrap: break-word;
  word-break: break-all;
}
.blog-img{
  display: flex;
  margin-right: -10rpx;
  flex-wrap: wrap;
  align-items: center;
}
.img{
  width: 230rpx;
  height: 230rpx;
  margin: 10rpx 10rpx 0rpx 0;
}
.nick-name{
  color: #d43c33;
  font-size: 32rpx;
}