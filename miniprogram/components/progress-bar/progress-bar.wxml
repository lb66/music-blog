<view class="container">
	<text class="time">{{showTime.currentTime}}</text>
	<view class="control">
		<movable-area class="area">
			<movable-view class="point" x="{{movableDies}}" damping="1000" direction="horizontal" 
      bindchange="onChange" bindtouchend="onTouchEnd"/>
		</movable-area>
		<progress stroke-width="4" backgroundColor="#969696" activeColor="#fff" percent="{{progress}}" />
	</view>
	<text class="time">{{showTime.totalTime}}</text>
</view>