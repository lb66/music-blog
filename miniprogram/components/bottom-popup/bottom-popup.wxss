.container {
  position: fixed;
  z-index: 99;
  text-align: center;
  background-color: rgba(0, 0, 0, 0.6);
  bottom: 0;
  top: 0;
  right: 0;
  left: 0;
}

.wrapper {
  box-sizing: border-box;
  position: absolute;
  bottom: 0;
  width: 100%;
  min-height: 300rpx;
  background-color: #f8f8f8;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-close {
  position: absolute;
  top: 0;
  right: 0;
  padding: 20rpx;
  z-index: 99;
}